# ============================================
# SECURITY
# ============================================

# API Key for authentication (CHANGE THIS!)
SECRET_API_KEY=troque_aqui_por_uma_chave_segura_minimo_32_caracteres

# Salt for data anonymization (CHANGE THIS!)
SALT_ANON=troque_este_salt_por_algo_unico_minimo_32_caracteres

# ============================================
# RATE LIMITING
# ============================================

# Maximum requests per minute per IP
RATE_LIMIT_PER_MIN=60

# ============================================
# REDIS (Optional - for persistent rate limiting and cache)
# ============================================

# Redis URL (leave empty to use in-memory fallback)
# Example: redis://localhost:6379
REDIS_URL=

# ============================================
# APPLICATION
# ============================================

# Server port
PORT=8000

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (set to false in production!)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================

# Allowed origins (comma-separated, use * for all - NOT recommended in production)
# Example: http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=*

# ============================================
# DATA
# ============================================

# Seed for reproducibility
SEED=42

# Maximum sequence length for DKT model
MAX_SEQ_LEN=200

# Minimum interactions threshold
MIN_INTERACTIONS_THRESHOLD=10

# ============================================
# MODEL
# ============================================

# Model checkpoint path
MODEL_PATH=models/dkt.pt

# Batch size for inference
INFERENCE_BATCH_SIZE=32

# ============================================
# FILE UPLOAD
# ============================================

# Maximum upload file size in MB
MAX_UPLOAD_SIZE_MB=50

# ============================================
# DRIFT DETECTION
# ============================================

# Kolmogorov-Smirnov test threshold
DRIFT_KS_THRESHOLD=0.01

# ============================================
# MONITORING (Optional)
# ============================================

# Enable Prometheus metrics endpoint
ENABLE_METRICS=false

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=

# ============================================
# NOTES
# ============================================
# - Never commit .env file to version control
# - Use strong, random values for SECRET_API_KEY and SALT_ANON  
# - In production, use environment-specific values
# - Consider using secrets management tools (AWS Secrets Manager, HashiCorp Vault, etc.)
# - Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"

